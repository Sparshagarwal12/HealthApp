<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity.blood_login"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/blood_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/health1"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/enter_aadhar"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:inputType="number"
            android:paddingRight="10dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:hint="आधार संख्या "/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:inputType="textWebPassword"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:hint="पासवर्ड "/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <ProgressBar-->
<!--            android:id="@+id/simpleProgressBar"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone"-->
<!--            android:layout_gravity="center"-->
<!--            />-->
        <Button
            android:id="@+id/button_login"
            android:layout_width="350dp"

            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="@drawable/bg1"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:text="सबमिट करे  "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#17AEEE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="अथवा "/>
        </LinearLayout>
        <Button
            android:id="@+id/button_register"
            android:layout_width="350dp"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:background="@drawable/bg1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="रजिस्टर करे  "/>

    </LinearLayout>
</ScrollView>