<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".blood_page"
        tools:ignore="ExtraText"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/blood_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="127dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_shape"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:hint="दाता का वजन (KG)"/>


            <EditText
                android:id="@+id/height"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:hint="दाता की लम्बाई (CM) "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="15dp"
                android:text="क्या आपने पिछले  48 घंटो मे शराब का सेवन किया है ? "
                android:paddingLeft="10dp"
                android:textColor="#373983"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_choice"
                android:background="@drawable/button_shape"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="0dp"
                />
            <EditText
                android:id="@+id/blood_date"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="पिछली बार रक्त दान की तिथि "/>

            <Button
                android:id="@+id/button_login"
                android:layout_width="350dp"
                android:paddingLeft="10dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:background="@drawable/bg1"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:text="लॉगिन "/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
