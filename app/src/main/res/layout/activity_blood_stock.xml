<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blood_bg"
    tools:context=".blood_stock">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            android:id="@+id/text"
            android:text="सम्पूर्ण ब्लड स्टॉक"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id1"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_border"
        android:layout_below="@+id/text"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="संपूर्ण रक्त"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/blood_type1"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner_background"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:hint="Number"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blood_unit1"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner_background"
                />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id2"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="लाल रक्त कोशिकाएँ"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:id="@+id/blood_type2"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blood_unit2"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id3"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginBottom="50dp"
                android:text="प्लाज़्मा "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_type3"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_unit3"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id4"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="प्लटेलेटस"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_type4"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_unit4"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id5"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="कृायो पृसीटीपीटेट"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blood_type5"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_unit5"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id6"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="गृनुलोसाइट्स"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blood_type6"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/blood_unit6"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id7"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="श्वेत रक्त कोशिकाएँ"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blood_type7"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:hint="Number"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:id="@+id/blood_unit7"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stock_submit"
            android:layout_below="@+id/id7"
            android:layout_centerHorizontal="true"
            android:text="सबमिट करें "/>
    </RelativeLayout>
</ScrollView>