<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blood_total_update"
    android:background="@drawable/blood_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:id="@+id/text"
            android:text="सम्पूर्ण ब्लड स्टॉक"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/from_date"
                android:padding="10dp"
                android:hint="from Date (DD/MM/YYYY)"
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:layout_height="40dp"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_marginTop="10dp"
                android:layout_below="@id/from_date"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/to_date"
                android:padding="10dp"
                android:hint="to Date (DD/MM/YYYY)"
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:layout_height="40dp"
                android:layout_marginTop="10dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id1"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/text"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="संपूर्ण रक्त"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_type1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginRight="10dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/update_unit1"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id2"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="लाल रक्त कोशिकाएँ"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:id="@+id/update_type2"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/update_unit2"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id3"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginBottom="50dp"
                android:text="प्लाज़्मा "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_type3"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_marginRight="10dp"
                    android:gravity="center"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_unit3"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id4"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="प्लटेलेटस"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_type4"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_unit4"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id5"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="कृायो पृसीटीपीटेट"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/update_type5"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_unit5"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id6"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="गृनुलोसाइट्स"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/update_type6"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/update_unit6"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id7"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_border"
            android:layout_below="@+id/id6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:text="श्वेत रक्त कोशिकाएँ "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/update_type7"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:id="@+id/update_unit7"
                    android:background="@drawable/spinner_background"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id7"
            android:layout_gravity="center"
            android:text="सबमिट करें "/>
    </LinearLayout>
</ScrollView>