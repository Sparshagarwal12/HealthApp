<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_Activity.community_reg"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/opt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="संगठन का पंजीकरण"
            android:textSize="40sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="match_parent">
            <Spinner
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_background"
                android:layout_height="30dp"
                android:id="@+id/ambulance_service"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/organisation_operator_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:hint="ऑपरेटर नाम दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:id="@+id/organisation_phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:hint="ऑपरेटर फोन नंबर दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:id="@+id/organisation_aadhar"
                android:background="@drawable/button_shape"
                android:hint="ऑपरेटर आधार नंबर दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/organisation_password"
                android:background="@drawable/button_shape"
                android:hint="Password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:id="@+id/ambulance_quantity"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:hint ="संगठन में एम्बुलेंस की संख्या दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:id="@+id/organisation_address"
                android:paddingLeft="20dp"
                android:background="@drawable/button_shape"
                android:hint="संगठन का पता दर्ज करें"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="55dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/button_shape"
               android:id="@+id/organisation_name"
               android:paddingLeft="20dp"
               android:hint="संगठन का नाम दर्ज करें"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/organisation_state"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <Spinner
                    android:id="@+id/organisation_dist"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:id="@+id/lat"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button_shape"
                        android:layout_height="50dp"
                        android:hint="लटीटुड">
                    </EditText>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/lon"
                        android:background="@drawable/button_shape"
                        android:hint="लोंगीटुड">

                    </EditText>

                </LinearLayout>
            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->

<!--                <TextView-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:id="@+id/lat"-->
<!--                    android:layout_weight="1"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:background="@drawable/button_shape"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:hint="लटीटुड">-->
<!--                </TextView>-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_marginRight="30dp"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:id="@+id/lon"-->
<!--                    android:background="@drawable/button_shape"-->
<!--                    android:hint="लोंगीटुड">-->

<!--                </TextView>-->

<!--            </LinearLayout>-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="गैट लोकेशन"
                android:background="@drawable/bg1"
                android:layout_marginTop="20dp"
                android:id="@+id/get_loc"/>
            <Button
                android:id="@+id/organisation_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="@drawable/bg1"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="पजीकरण करे "/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>