<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity.hospital_login"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/main_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/health1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="20dp">
            <EditText
            android:id="@+id/hospital_aadhar_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
                android:inputType="number"
            android:paddingRight="10dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:hint="आधार संख्या"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="0dp">
        <EditText
            android:id="@+id/hospital_login_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textWebPassword"
            android:layout_marginTop="2dp"
            android:hint="पासवर्ड "/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/login_users"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="20dp"/>

<!--            <ProgressBar-->
<!--                android:id="@+id/simpleProgressBar"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:visibility="gone"-->
<!--                android:layout_gravity="center"-->
<!--                />-->
       <Button
           android:paddingRight="10dp"
            android:id="@+id/hospital_login_button"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="@drawable/bg1"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:text="सबमिट करे  "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#17AEEE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="अथवा "/>
        </LinearLayout>
        <Button
            android:paddingRight="10dp"
            android:id="@+id/hospital_register_button"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:background="@drawable/bg1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="रजिस्टर करे  "/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>