<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity.MainLogin"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/main_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/healthbg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/main_aadhar_login"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/button_shape"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="number"
                    android:layout_marginTop="2dp"
                    android:hint="आधार संख्या"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/main_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/button_shape"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="textWebPassword"
                    android:layout_marginTop="2dp"
                    android:hint="पासवर्ड "/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/main_login_users"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="20dp"/>
            <rippleview.huang.com.RippleView
                android:id="@+id/ripple_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ripple_amount="3"
                app:ripple_color="@android:color/holo_blue_light"
                app:ripple_duration="3000"
                app:ripple_scale="4.0"
                app:ripple_strokeWidth="2.0"
                app:ripple_style="fillRipple" >
            <Button
                android:paddingRight="10dp"
                android:id="@+id/main_login_button"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:background="@drawable/strokebg"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:text="सबमिट करे  "/>
            </rippleview.huang.com.RippleView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#17AEEE"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="अथवा "/>
            </LinearLayout>
            <Button
                android:paddingRight="10dp"
                android:id="@+id/main_register_button"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="40dp"
                android:textSize="17dp"
                android:background="@drawable/strokebg"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="रजिस्टर करे  "/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
