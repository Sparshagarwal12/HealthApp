<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_Activity.operator_reg"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/opt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ड्राइवर का पंजीकरण"
            android:textSize="40sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/driver_email"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:hint="ड्राइवर की ईमेल दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:id="@+id/driver_password"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:hint="पासवर्ड दर्ज करें"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:id="@+id/driver_name"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:hint="ड्राइवर नाम दर्ज करें"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:id="@+id/driver_phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:hint="ड्राइवर फोन नंबर दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:id="@+id/driver_aadhar"
                android:background="@drawable/button_shape"
                android:hint="ड्राइवर आधार नंबर दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:id="@+id/driver_licence"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:hint ="अपना ड्राइविंग लाइसेंस नंबर दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:id="@+id/driver_experience"
                android:paddingLeft="20dp"
                android:background="@drawable/button_shape"
                android:hint="अपना ड्राइविंग अनुभव दर्ज करें"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:id="@+id/driver_age"
                android:paddingLeft="20dp"
                android:hint="अपनी आयु दर्ज करें"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:id="@+id/driver_photo"
                android:paddingLeft="20dp"
                android:hint="फोटो डालें"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose File" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/driver_state"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <Spinner
                    android:id="@+id/driver_district"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/driver_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="@drawable/bg1"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="पजीकरण करे "/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>