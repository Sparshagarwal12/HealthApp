<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_background"
    android:layout_height="match_parent"
    tools:context=".take_blood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:text="Take Blood"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/blood_type_take"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_background"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/blood_component_take"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spinner_background"/>
            </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/button_shape"
            android:id="@+id/donor_name"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_height="55dp"
            android:hint="Donor Name"/>
                <EditText
                    android:id="@+id/donate_date"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_shape"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="Donate की तारीख" />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:id="@+id/aadhar_number_blood"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_height="55dp"
                android:hint="Donor Aadhar Number"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:id="@+id/donor_moblie"
                android:padding="10dp"
                android:layout_height="55dp"
                android:hint="Donor Mobile Number"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:id="@+id/receiver_name"
                android:padding="10dp"
                android:layout_height="55dp"
                android:hint="Receiver Name"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:id="@+id/unit_number"
                android:layout_height="55dp"
                android:padding="10dp"
                android:hint="Blood Unit"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/submit_take"
                android:layout_marginTop="30dp"
                android:text="Submit"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>